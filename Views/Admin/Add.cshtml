@model WebBanHang.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Thêm sản phẩm</h1>

    <form asp-action="Add" method="post" enctype="multipart/form-data" class="mx-auto" style="max-width: 600px;">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Tên sản phẩm -->
        <div class="form-group mb-3">
            <label asp-for="Name" class="font-weight-bold"><i class="bi bi-pencil"></i> Tên sản phẩm</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Giá sản phẩm -->
        <div class="form-group mb-3">
            <label asp-for="Price" class="font-weight-bold"><i class="bi bi-cash"></i> Giá sản phẩm</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Nhập giá sản phẩm" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Mô tả sản phẩm -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="font-weight-bold"><i class="bi bi-textarea-t"></i> Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Chọn danh mục -->
        <div class="form-group mb-3">
            <label asp-for="CategoryId" class="font-weight-bold"><i class="bi bi-list-check"></i> Danh mục</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                <option value="">-- Chọn danh mục --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Upload hình ảnh -->
        <div class="form-group mb-3">
            <label asp-for="ImageUrl" class="font-weight-bold"><i class="bi bi-image"></i> Hình ảnh</label>
            <input type="file" asp-for="ImageUrl" class="form-control-file" />
        </div>

        <!-- Nút thêm sản phẩm -->
        <button type="submit" class="btn btn-success btn-lg w-100 mt-4">Thêm sản phẩm</button>
    </form>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
