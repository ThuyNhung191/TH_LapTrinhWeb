@model WebBanHang.Models.Product

<div class="container mt-5">
    <!-- Title with styling -->
    <h2 class="text-center text-danger" style="font-size: 2em; font-weight: bold; text-shadow: 1px 1px 3px rgba(0,0,0,0.3);">
        ❗ Bạn có chắc chắn muốn xóa sản phẩm này? ❗
    </h2>

    <!-- Product Details Card -->
    <div class="card mt-4 shadow rounded">
        <div class="card-body bg-light">
            <h4 class="card-title text-primary"><i class="bi bi-box"></i> Tên sản phẩm: @Model.Name</h4>
            <h4 class="card-subtitle text-success"><i class="bi bi-cash"></i> Giá: @Model.Price</h4>
            <h4 class="card-text text-secondary"><i class="bi bi-card-text"></i> Mô tả: @Model.Description</h4>
        </div>
    </div>

    <!-- Form for Deletion -->
    <form asp-action="DeleteConfirmed" method="post" class="mt-4 text-center">
        <input type="hidden" asp-for="Id" />

        <!-- Buttons -->
        <button type="submit" class="btn btn-danger btn-lg me-3">
            <i class="bi bi-trash3"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Hủy
        </a>
    </form>
</div>
