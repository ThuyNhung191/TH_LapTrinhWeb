@model WebBanHang.Models.Product;

<div class="container mt-5">
    <!-- Tiêu đề -->
    <h1 class="text-center mb-4" style="font-family: 'Roboto', sans-serif; font-size: 2.5em; font-weight: bold; color: #007bff; text-shadow: 2px 2px 5px rgba(0,0,0,0.3);">
        Chi Tiết Sản Phẩm
    </h1>

    <div class="row shadow-lg rounded p-4 bg-light">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-6 text-center">
            <img src="@Url.Content(Model.ImageUrl)" alt="Ảnh sản phẩm" class="img-fluid rounded" style="max-height: 400px;" />
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            <h2 class="text-primary">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <p class="text-success" style="font-size: 1.5em; font-weight: bold;">Giá: @Model.Price</p>
            <p class="text-secondary"><strong>Danh mục:</strong> @Model.Category?.Name</p>
        </div>
    </div>

    <!-- Nút điều hướng -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
        </a>
    </div>
</div>
