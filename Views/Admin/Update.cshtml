@model WebBanHang.Models.Product

<div class="container mt-5">
    <h2 class="text-center mb-4" style="font-family: 'Roboto', sans-serif; font-size: 2.5em; font-weight: bold; color: #007bff; text-shadow: 2px 2px 5px rgba(0,0,0,0.3);">
        ✨ Chỉnh sửa sản phẩm ✨
    </h2>
</div>


    <form asp-action="Update" method="post" enctype="multipart/form-data" class="mx-auto shadow p-4 rounded" style="max-width: 600px; background-color: #f9f9f9;">
        <!-- Hidden field for the Id -->
        <input type="hidden" asp-for="CategoryId" />

        <!-- Product Name -->
        <div class="form-group mb-3">
            <label asp-for="Name" class="font-weight-bold text-dark"><i class="bi bi-pencil-square"></i> Tên sản phẩm</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Product Price -->
        <div class="form-group mb-3">
            <label asp-for="Price" class="font-weight-bold text-dark"><i class="bi bi-cash-coin"></i> Giá sản phẩm</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Nhập giá sản phẩm" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Product Description -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="font-weight-bold text-dark"><i class="bi bi-text-paragraph"></i> Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Product Image -->
        <div class="form-group mb-3">
            <label asp-for="ImageUrl" class="font-weight-bold text-dark"><i class="bi bi-card-image"></i> Hình ảnh</label>
            <input type="file" asp-for="ImageUrl" class="form-control-file" />
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success btn-lg w-100 mt-4">Cập nhật sản phẩm</button>
    </form>

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
