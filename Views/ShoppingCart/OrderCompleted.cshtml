@model int

<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow" style="max-width: 500px;">
    <div class="card-body text-center">
      <i class="bi bi-check-circle-fill" style="font-size: 4rem; color: #28a745;"></i>
      <h3 class="card-title mt-3">Order Completed</h3>
      <p class="card-text">Your order with ID <strong>@Model</strong> has been placed successfully.</p>
      
      <!-- Nút "Tiếp tục mua hàng" -->
      <a href="/" class="btn btn-primary mt-3">Tiếp tục mua hàng</a>
      
      <!-- Nút "Quay lại" -->
      <a href="javascript:history.back()" class="btn btn-secondary mt-3">Quay lại</a>

      <!-- Nút "Chi tiết đơn hàng" -->
      <a asp-action="Invoice" asp-route-orderId="@Model" class="btn btn-info mt-3">Chi tiết đơn hàng</a>
    </div>
  </div>
</div>